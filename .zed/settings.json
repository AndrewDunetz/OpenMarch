        "typescript": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "tsx": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "astro": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "markdown": {
            "tab_size": 2
        },
        "json": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        }
    },
    "format_on_save": "on",
